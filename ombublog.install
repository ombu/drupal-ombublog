<?php

/**
 * @file
 * Install, update and uninstall functions for the ombublog module
 */

/**
 * Implements hook_install().
 */
function ombublog_install() {
  // Set pathauto pattern for blog posts and tags.
  variable_set('pathauto_node_blog_post_pattern', 'blog/[node:field-blog:name]/[node:created:custom:Y]/[node:created:custom:m]/[node:created:custom:d]/[node:title]');
}
